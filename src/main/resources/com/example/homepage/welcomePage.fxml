<AnchorPane prefHeight="558.0" prefWidth="1500.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.homepage.welcomePageController">
   <children>
      <ImageView fitHeight="691.0" fitWidth="1149.0" opacity="0.86" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@bank-vault-background-with-money-gold-vector-38245816.jpg" />
         </image>
      </ImageView>
      <Label id="message" fx:id="message" alignment="CENTER" contentDisplay="TOP" layoutX="288.0" layoutY="99.0" prefHeight="360.0" prefWidth="307.0" stylesheets="@styles.css" text="MORE THAN 100,000,000 USERS WORLDWIDE!" textAlignment="CENTER" wrapText="true" />
      <Button fx:id="checkBtn" layoutX="661.0" layoutY="257.0" mnemonicParsing="false" onAction="#signInAnimation" prefHeight="44.0" prefWidth="109.0" text="check it out!" />
      <Button fx:id="NextBtn" layoutX="408.0" layoutY="437.0" mnemonicParsing="false" onAction="#nextMessage" text="Button" />
      <VBox id="signInBox" fx:id="signInBox" layoutX="1016.0" layoutY="34.0" prefHeight="490.0" prefWidth="383.0" stylesheets="@styles.css">
         <children>
            <TextField fx:id="name" text="name" />
            <TextField fx:id="surname" stylesheets="@styles.css" text="surname" />
            <TextField fx:id="username" text="username" />
            <TextField fx:id="password" text="password" />
            <TextField fx:id="gender" text="gender" />
            <TextField fx:id="age" text="age" />
            <TextField fx:id="phone" text="phone" />
            <TextField fx:id="email" text="email" />
            <Button mnemonicParsing="false" onAction="#createUser" text="Button" />
            <Button mnemonicParsing="false" onAction="#printuser" text="print" />
            <Button mnemonicParsing="false" onAction="#saveUser" text="file" />
            <Button mnemonicParsing="false" onAction="#signIn" text="sign in" />
         </children></VBox>
      <Button fx:id="backBtn" disable="true" layoutX="661.0" layoutY="257.0" mnemonicParsing="false" onAction="#backAnimation" opacity="0.0" prefHeight="44.0" prefWidth="109.0" text="Back" />
   </children>
</AnchorPane>
